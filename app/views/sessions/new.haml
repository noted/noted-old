!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}

    %meta{:content => "Research together.", :name => "description"}
    %meta{:content => "Noted.", :name => "author"}

    %title Noted.

    %link{:href => "/favicon.ico", :rel => "icon"}

    %link{:href => "/humans.txt", :rel => "author", :type => "text/plain"}
    %link{:href => "/css/individual/session.css", :rel => "stylesheet"}

    %script{:src => "//use.typekit.net/rau7fcj.js", :type => "text/javascript"}
    
    :coffeescript
      try
        Typekit.load()

  %body
    #contain
      %header
        %h1
          %a{:href => url(:index)} Noted.

      #main{:role => "main"}
        .login
          - form_tag url(:sessions, :create), :method => "post" do
            %p= text_field_tag :"user[email]", :placeholder => "Email"
            %p= password_field_tag :"user[password]", :placeholder => "Password"
            %p.buttons
              %a.btn{:href => "#"} Help
              = submit_tag "Login", :class => "primary"

    %script{:src => "http://code.jquery.com/jquery.min.js"}
    :coffeescript
      window._gaq = [["_setAccount", "UAXXXXXXXX1"], ["_trackPageview"], ["_trackPageLoadTime"]]
.join
  = partial 'partials/flash', :locals => { :flash => flash }
  - form_tag url(:users, :create), :method => "post" do
    %header
      %h2 Join
    %section
      %p= text_field_tag :"user[name]", :placeholder => "Name"
      %p= text_field_tag :"user[username]", :placeholder => "Username"
      %p= email_field_tag :"user[email]", :placeholder => "your@email.org"
      %p= password_field_tag :"password", :placeholder => "Password"
    %footer
      %p= submit_tag "Join", :class => "green"